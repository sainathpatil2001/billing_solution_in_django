{
  "appId": "com.yourcompany.billing-system",
  "productName": "Billing System",
  "directories": {
    "output": "dist"
  },
  "files": [
    "electron/**/*",
    "!**/__pycache__/**/*",
    "!**/migrations/**/*.pyc"
  ],
  "extraResources": [
    {
      "from": "dist-python/django_app",
      "to": "django_app"
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ],
    "requestedExecutionLevel": "asInvoker"
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": [
          "x64",
          "arm64"
        ]
      }
    ],
    "icon": "assets/icon.icns",
    "category": "public.app-category.business"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": [
          "x64"
        ]
      }
    ],
    "icon": "assets/icon.png",
    "category": "Office"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Billing System"
  }
}