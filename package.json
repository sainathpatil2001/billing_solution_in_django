{
  "name": "billing-system-desktop",
  "version": "1.0.0",
  "description": "Desktop Billing System Application",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run django\" \"npm run electron-dev\"",
    "django": "python manage.py runserver 8000",
    "electron-dev": "wait-on http://localhost:8000 && electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "dist": "npm run build"
  },
  "keywords": [
    "billing",
    "inventory",
    "desktop",
    "electron"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  }
}